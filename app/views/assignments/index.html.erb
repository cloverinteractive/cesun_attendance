<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Term</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.name %></td>
    <td><%= assignment.code %></td>
    <td><%= assignment.term %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, :confirm => 'Estas seguro que quieres borrar el registro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

