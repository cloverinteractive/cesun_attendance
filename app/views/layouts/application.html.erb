<!DOCTYPE html>
<html>
  <head>
    <title>CESUN Asistencia</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
    <meta charset="utf-8">
  </head>
  <body>
    <div id="heading"></div>
    <% if devise_controller? and controller_name == 'sessions' and action_name == 'new' %>
      <%= yield %>
    <% else %>
      <div id="wrapper">
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>
